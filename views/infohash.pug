doctype html
html(lang="en")
    include includes/header.pug
    body.bg-gray-50.min-h-screen.flex.flex-col
        include includes/navbar.pug
        
        main.flex-grow
            .container.mx-auto.px-4.py-8
                .max-w-4xl.mx-auto
                    .card.mb-8
                        .p-6
                            h1.text-2xl.font-bold.text-dark-900.mb-6.text-center= result.name
                            
                            .grid.gap-6(class="md:grid-cols-2")
                                .flex.flex-col
                                    h3.text-sm.font-semibold.text-dark-600.uppercase.mb-2 Infohash
                                    p.font-mono.text-dark-800.break-all.select-all= result.infohash
                                
                                .flex.flex-col
                                    h3.text-sm.font-semibold.text-dark-600.uppercase.mb-2 Fetched At
                                    p.text-dark-800= new Date(result.fetchedAt).toLocaleString()
                                
                            .mt-6
                                h3.text-sm.font-semibold.text-dark-600.uppercase.mb-2 Files
                                - var filestring = result.files ? String(result.files) : '';
                                - var formatstring = filestring.split(',').join('\n');
                                .bg-gray-50.rounded-lg.p-4.overflow-auto.max-h-96.text-sm.text-dark-700.font-mono
                                    pre.whitespace-pre-wrap.break-words= formatstring || result.name
                                
                            .flex.justify-center.mt-8
                                a.btn-primary.flex.items-center(href=result.magnet + trackers target="_blank")
                                    i.fas.fa-magnet.mr-2
                                    span Download via Magnet URI
                            
                            if timer
                                .text-center.mt-4
                                    p.text-sm.text-dark-500 Query time: #{timer} ms

        include includes/footer.pug
